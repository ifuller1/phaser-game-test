{
  "compilerOptions": {
    "lib": ["es6", "dom"],
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": false,
    "strictFunctionTypes": true,
    "strict": true,
    "noImplicitThis": true,
    "sourceMap": true,
    "target": "es6",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "typeRoots": ["node_modules/@types"],
    "types": ["jest", "node"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
